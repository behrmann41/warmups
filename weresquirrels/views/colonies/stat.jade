extends ../layout

block content
  nav.navbar.navbar-inverse
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/colonies') Home
  .container
    h1.text-center.text-warning All of the Weresquirrels in the World
    .row
      for weresquirrel in weresquirrels
        .col-md-4
          .thumbnail
            img.squirrelpic(src= weresquirrel.img, alt='pic1')
            .caption
              h2.text-center.text-danger= weresquirrel.name
              h2.text-info.text-center= weresquirrel.colonyName
                for duel in weresquirrel.duels
                  h3.text-center Garlic Collected:  
                    = duel.garlic
                  h3.text-center Meat Collected:  
                    = duel.meat